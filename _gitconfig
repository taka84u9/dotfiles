# vim: set ft=conf :
[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  grep = auto
[core]
  editor = vim
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
[user]
  name = Yuku TAKAHASHI
  email = taka84u9@gmail.com
[http]
  sslVerify = false
[alias]
  amend          = commit --amend -C HEAD
  branch-root    = merge-base master HEAD
  current-branch = rev-parse --abbrev-ref HEAD
  delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d %
  uncommit       = reset HEAD~
  today          = log --oneline --since='12 hour ago'
  pull-dry-run   = !git fetch origin; B=$(git rev-parse --abbrev-ref HEAD); git diff --stat --summary ${B}..origin/${B}
  sync           = !git checkout master && git pull origin master && git fetch -p origin && git branch -d $(git branch --merged | grep -v master | grep -v '*')
  co = checkout
  st = status
  ci = commit -v
  br = branch -vv
  lg = log --graph --pretty='format:%C(yellow)%h%C(blue)%d%C(reset) %s %C(cyan)%an, %ar%C(reset)'
  gp = grep -H --heading --break
[gui]
  encoding = utf-8
[push]
  default = current
[pull]
  rebase = true
[grep]
  lineNumbers = true
[branch "master"]
  mergeoptions = --no-ff
  rebase = true
[hub]
  protocol = https
[web]
  browser = open
[browser "chrome"]
  cmd = open -a 'Google Chrome.app'
[github]
  user = yuku-t
[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
[help]
	autocorrect = 1
[rerere]
	enabled = 1
[url "git@github.com:yuku-t/"]
    insteadof = gh:
[url "git@github.com:"]
    pushinsteadof = "https://github.com/"
    pushinsteadof = "git://github.com/"
[diff "json"]
#  textconv = "jq -M ."
  textconv = "python -mjson.tool"
[merge]
	tool = gvimdiff
[include]
	path = ~/.gitconfig.local
[rebase]
	autosquash = true
