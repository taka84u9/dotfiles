# vim: set ft=conf :
[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  grep = auto
[core]
  editor = vim
  excludesfile = /opt/boxen/config/git/gitignore
[user]
  name = Yuku Takahashi
  email = taka84u9@gmail.com
[http]
  sslVerify = false
[alias]
  co = checkout
  st = status
  ci = commit -v
  di = diff
  br = branch -vv
  puhs = push
  psuh = push
  pus = push
  puh = push
  pl = !git pull && git submodule update --init
  lg = log --graph --pretty='format:%C(yellow)%h%C(blue)%d%C(reset) %s %C(cyan)%an, %ar%C(reset)'
  today = log --oneline --since='12 hour ago'
  gp = grep -H --heading --break
  uncommit = reset HEAD~
  delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d %
  current-branch = rev-parse --abbrev-ref HEAD
  pull-dry-run  = !"git fetch origin; B=$(git rev-parse --abbrev-ref HEAD); git diff --stat --summary ${B}..origin/${B}"
[gui]
  encoding = utf-8
[push]
  default = current
[tig "bind"]
  generic = g move-first-line
  generic = G move-last-line
[pull]
  rebase = true
[grep]
  lineNumbers = true
[branch "master"]
  mergeoptions = --no-ff
  rebase = true
[hub]
  protocol = https
[credential]
  helper = /opt/boxen/bin/boxen-git-credential
[web]
  browser = open
[browser "chrome"]
  cmd = open -a 'Google Chrome.app'
[github]
  user = yuku-t
[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
