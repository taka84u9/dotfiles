# vim: set ft=toml noexpandtab :
[color]
	branch      = auto
	diff        = auto
	grep        = auto
	interactive = auto
	status      = auto
	ui          = auto
[core]
	editor         = vim
	excludesfile   = ~/.gitignore
	attributesfile = ~/.gitattributes
[init]
	templatedir = ~/.gittemplate
[user]
	name  = Yuku TAKAHASHI
	email = taka84u9@gmail.com
[http]
	sslVerify = false
[alias]
	amend          = commit --amend -C HEAD
	branch-root    = merge-base master HEAD
	current-branch = rev-parse --abbrev-ref HEAD
	delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d %
	review         = !tig --no-walk -w $(git branch-root)..HEAD
	sync           = !git checkout master && git pull origin master && git fetch -p origin && git delete-merged-branches
	today          = log --oneline --since='12 hour ago'
	uncommit       = reset HEAD~
	mergelog       = log --merges --pretty=format:'%C(yellow)%h %Cgreen%ci %Cblue%cn%Cred%d %Creset%s %C(cyan)%b'
	ci             = commit -v
	br             = branch -vv
	lg             = log --graph --pretty='format:%C(yellow)%h%C(blue)%d%C(reset) %s %C(cyan)%an, %ar%C(reset)'
	gp             = grep -H --heading --break
	pull-dry-run   = !"git fetch origin; B=$(git current-branch); git diff --stat --summary ${B}..origin/${B}"
	ctags          = !.git/hooks/ctags
[push]
	default = current
[pull]
	rebase = true
[grep]
	lineNumbers = true
[branch "master"]
	mergeoptions = --no-ff
	rebase       = true
[gui]
	encoding = utf-8
[hub]
	protocol = https
[web]
	browser = open
[browser "chrome"]
	cmd = open -a 'Google Chrome.app'
[github]
	user = yuku-t
[pager]
	log  = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[help]
	autocorrect = 1
[rerere]
	enabled = 1
[url "git@github.com:yuku-t/"]
	insteadof = gh:
[url "git@github.com:"]
	pushinsteadof = "https://github.com/"
	pushinsteadof = "git://github.com/"
[diff "json"]
	textconv = "jq -M ."
[merge]
	conflictstyle = diff3
[include]
	path = ~/.gitconfig.local
[rebase]
	autosquash = true
[ghq]
	root = ~/.ghq
[filter "media"]
	clean  = git-media-clean %f
	smudge = git-media-smudge %f
[tig]
	blame-view = id:yes,color date:short author:abbreviated line-number:yes,interval=1 text
	diff-options = -m --first-parent
	ignore-space = at-eol
	line-graphics = ascii
	main-view = id date:short author:abbreviated commit-title:graph=yes,refs=yes
	mouse = yes
	refresh-mode = auto
	split-view-height = 80%
	vertical-split = no
[tig "bind"]
	# @-prefix means that the console output will not be shown.
	blob = B @hub browse -- tree/%(commit)/%(file)
	diff = g move-first-line
	diff = G move-last-line
	diff = <Ctrl-d> move-half-page-down
	diff = <Ctrl-f> move-page-down
	diff = <Ctrl-u> move-half-page-up
	diff = <Ctrl-b> move-page-up
	diff = B @hub browse -- commit/%(commit)
	diff = F ?!git commit --fixup %(commit)
	diff = S ?!git commit --squash %(commit)
	main = F ?!git commit --fixup %(commit)
	main = S ?!git commit --squash %(commit)
	main = U ?!git uncommit
	stage = <Ctrl-n> :/^@@
	stage = <Ctrl-p> :?^@@
	status = C !git commit -v
	tree = B @hub browse -- tree/%(commit)/%(directory)
