[color]
	branch      = auto
	diff        = auto
	grep        = auto
	interactive = auto
	status      = auto
	ui          = auto
[core]
	editor         = vim
	excludesFile   = ~/.gitignore
	attributesFile = ~/.gitattributes
[init]
	templateDir = ~/.gittemplate
[user]
	name  = Yuku TAKAHASHI
	email = taka84u9@gmail.com
[alias]
	ci             = commit -v
	br             = branch -vv
	lg             = log --graph --pretty='format:%C(yellow)%h%C(blue)%d%C(reset) %s %C(cyan)%an, %ar%C(reset)' --all
	gp             = grep -H --heading --break

	aliases        = config --get-regexp alias
	amend          = commit --amend -C HEAD
	branch-root    = merge-base master HEAD
	ctags          = !.git/hooks/ctags
	current-branch = symbolic-ref --quiet --short HEAD
	delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d %
	mergelog       = log --merges --pretty=format:'%C(yellow)%h %Cgreen%ci %Cblue%cn%Cred%d %Creset%s %C(cyan)%b'
	pull-dry-run   = !git fetch origin && B=$(git current-branch) && git diff --stat --summary ${B}..origin/${B}
	review         = !tig --no-walk -w $(git branch-root)..HEAD
	sync           = !git checkout master && git pull origin master && git update
	today          = log --oneline --since='12 hour ago'
	uncommit       = reset HEAD~
	update         = !git fetch --prune && git update-ref refs/heads/master origin/master && git delete-merged-branches
[push]
	default = current
[pull]
	rebase = true
[grep]
	lineNumbers = true
	extendedRegexp = true
[branch "master"]
	mergeoptions = --no-ff
[gui]
	encoding = utf-8
[hub]
	protocol = https
[web]
	browser = open
[browser "chrome"]
	cmd = open -a 'Google Chrome.app'
[github]
	user = yuku-t
[pager]
	log  = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[help]
	autocorrect = 1
[rerere]
	enabled = true
[url "git@github.com:"]
	pushinsteadof = "https://github.com/"
[diff "json"]
	textconv = "jq -M ."
[merge]
	conflictstyle = diff3
[rebase]
	autosquash = true
[ghq]
	root = ~/src
[filter "media"]
	clean  = git-media-clean %f
	smudge = git-media-smudge %f
[format]
	pretty = format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset
[tig]
	blame-view = id:yes,color date:short author:abbreviated line-number:yes,interval=1 text
	diff-options = -m --first-parent
	ignore-space = at-eol
	line-graphics = ascii
	main-view = id date:short author:abbreviated commit-title:graph=yes,refs=yes
	mouse = yes
	refresh-mode = auto
	split-view-height = 80%
	vertical-split = no
[tig "bind"]
	# @-prefix means that the console output will not be shown.
	blob = B @hub browse -- tree/%(commit)/%(file)
	diff = <Ctrl-b> move-page-up
	diff = <Ctrl-d> move-half-page-down
	diff = <Ctrl-f> move-page-down
	diff = <Ctrl-u> move-half-page-up
	diff = B @hub browse -- commit/%(commit)
	diff = F ?!git commit --fixup %(commit)
	diff = G move-last-line
	diff = R ?!git revert %(commit)
	diff = S ?!git commit --squash %(commit)
	diff = g move-first-line
	main = F ?!git commit --fixup %(commit)
	main = S ?!git commit --squash %(commit)
	main = U ?!git uncommit
	stage = <Ctrl-n> :/^@@
	stage = <Ctrl-p> :?^@@
	status = C !git commit -v
	tree = B @hub browse -- tree/%(commit)/%(directory)
